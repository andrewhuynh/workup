#!/usr/bin/env ruby
# frozen_string_literal: true

require 'workup'
require 'io/console'

def password
  ENV['PASSWORD'] ||= begin
    if STDIN.tty?
      print 'Enter Password: '
      password = STDIN.noecho(&:gets).chomp
      puts
      password
    else
      STDIN.read.chomp
    end
  end
end

password

if Process.uid.zero? || password.empty? || Gem.win_platform?
  Workup::Application.start(ARGV)
else
  puts 'Auto-sudoing'
  exec("sudo PASSWORD=#{password} -k -S -p '' -- #{$PROGRAM_NAME} #{ARGV.join(' ')} <<< #{password}")
end
